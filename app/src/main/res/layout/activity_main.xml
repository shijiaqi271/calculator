<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:alignmentMode="alignBounds"
    android:rowCount="11"
    android:columnCount="4"
    android:orientation="horizontal"

    tools:context=".MainActivity"
    tools:ignore="GridLayout">
    <!-- orientation="horizontal"水平布局
                      vertical   垂直布局
                      rowCount   最大行数
                      columnCount 最大列数
                      alignmentMode 对齐模式-->
    <EditText
        android:id="@+id/text"
        android:layout_gravity="right|bottom"
        android:text="0"
        android:textSize="50dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="20dp"
        android:layout_columnSpan="4"
        android:layout_rowWeight="6"
        android:background="@null"
        android:inputType="numberDecimal"
        android:layout_columnWeight="1" />
    <Button
        android:id="@+id/btn_clear"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="c"
        android:textSize="24dp"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_del"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="@string/icon_chuangkou"
        android:textSize="34dp"
        android:textStyle="bold"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_leftbra"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="("
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_rightbra"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text=")"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_sin"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="sin"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_cos"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="cos"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_PandM"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="+/-"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_div"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="÷"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_mul"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="×"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
<!--    开根-->
    <Button
        android:id="@+id/btn_squ2"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="√"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_7"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="7"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_8"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="8"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_9"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="9"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_sub"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="-"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_4"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="4"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="5"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="6"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_add"
        android:layout_margin="0.5dp"
        android:background="#F0F0F0"
        android:textColor="#2DAFFF"
        android:text="+"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_1"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="1"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_2"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="2"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_3"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="3"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

    <Button
        android:id="@+id/btn_equ"
        android:layout_margin="0.5dp"
        android:background="#2DAFFF"
        android:textColor="#FFFFFF"
        android:text="="
        android:textSize="24dp"
        android:layout_rowSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
<!--    小数点-->
    <Button
        android:id="@+id/btn_p"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="."
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
    <Button
        android:id="@+id/btn_0"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#7C7D82"
        android:text="0"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />
<!--    求余-->
    <Button
        android:id="@+id/btn_percent"
        android:layout_margin="0.5dp"
        android:background="#FAFAFA"
        android:textColor="#009CD9"
        android:text="%"
        android:textSize="24dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        />

</GridLayout>